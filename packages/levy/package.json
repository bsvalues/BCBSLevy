{
  "name": "@terrafusion/levy",
  "version": "0.1.0",
  "description": "TerraFusion Levy calculation and management API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "db:migrate": "drizzle-kit push:pg",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:reset": "ts-node src/scripts/resetDb.ts"
  },
  "dependencies": {
    "@terrafusion/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.3",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18"
  }
}